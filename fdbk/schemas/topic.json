{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "units": {
      "type": "object",
      "properties": {
        "field": { "type": "string"},
        "unit": { "type": "string"}
      },
      "required": ["field", "unit"],
      "additionalProperties": false
    },
    "data_tools": {
      "type": "object",
      "properties": {
        "field": { "type": "string"},
        "method": { "type": "string"},
        "metadata": {"type": "object"},
        "parameters": {"type": "object"}
      },
      "required": ["field", "method"],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "name": {"type": "string"},
    "type": { "enum": ["topic", "template"]},
    "template": {
      "oneOf": [
        {"type": "string"},
        {"type": "null"}
      ]
    },
    "description": {
      "oneOf": [
        {"type": "string"},
        {"type": "null"}
      ]
    },
    "fields": {
      "type": "array",
      "items": {"type": "string"}
    },
    "units": {
      "type": "array",
      "items": {"$ref": "#/definitions/units"}
    },
    "data_tools": {
      "type": "array",
      "items": {"$ref": "#/definitions/data_tools"}
    },
    "metadata": {"type": "object"}
  },
  "required": ["id", "name", "type", "template", "description", "fields", "units", "data_tools", "metadata"],
  "additionalProperties": false
}
